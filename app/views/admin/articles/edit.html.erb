<% content_for :title, "Editing article" %>

<%= simple_form_for([:admin, @article]) do |f| %>
  <%= render "components/layouts/subheader/subheader" do %>
    <%= link_to "< Back", admin_articles_path %>
    <%= button_tag "Save", type: :submit, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
  <% end %>

  <div class="bg-zinc-200 p-4">
    <%= container do %>
      <%= render "form", article: @article, f: f %>
    <% end %>
  </div>
<% end %>
