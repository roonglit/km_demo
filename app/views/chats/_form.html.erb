<div class='flex flex-col items-center justify-center w-full h-full'>
  <div class='container p-40'>
    <%= simple_form_for(chat) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      
      <h2 class='text-center mb-2 font-bold text-3xl'>What can I help with?</h2>
      <div class='flex flex-row'>
        <%= f.input :topic, label: false, wrapper_html: {class: 'flex-grow mb-0 mr-2'} %>
        <%= f.button :submit, "Send", class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold px-4 rounded' %>
      </div>
    <% end %>
  </div>
</div>
