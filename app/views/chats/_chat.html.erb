<div id="<%= dom_id chat %>" class='flex flex-col h-full'>
  <%= turbo_frame_tag "messages", class: 'flex-grow' do %>
    <% chat.messages.each do |message| %>
      <%= render message %>
    <% end %>
  <% end %>
  <%= turbo_frame_tag "message-form", class: 'px-4 py-2' do %>
    <%= render "messages/form", chat: chat %>
  <% end %>
</div>

<%= turbo_stream_from chat %>